@model shawIschoolProject.Models.EmploymentModel;
@{
    ViewData["Title"] = @Model.pageTitle;
}
<div id="hideMe" style="display:none">
    <div class="employmentContent">
        <h1>@Model.introduction.title</h1>
        <!--divider for introduction info, allows them to be styled next to each other-->
        <div class="infoContainer">
            @foreach(var contentPiece in Model.introduction.content) {
                <!--individual holder for each set of info-->
                <div class="info">
                    <h3>@contentPiece.title</h3>
                    <h5>@contentPiece.description</h5>
                </div>
            }
        </div>

        <div>
            <h2>@Model.degreeStatistics.title</h2>
            <!--divier to contain statistics that are listed by foreach-->
            <div class="statisticsContainer">
                @foreach (var statistic in Model.degreeStatistics.statistics)
                {
                    <div class="statistic">
                        <h1>@statistic.value</h1>
                        <h3>@statistic.description</h3>
                    </div>

                }
            </div>
        </div>

        <div class="infoContainer">
            <!--container for employmers-->
            <div class="smallList">
                <h2>@Model.employers.title</h2>
                @foreach(var employer in Model.employers.employerNames){
                    <h4>@employer</h4>
                }
            </div>
            <!--container for careers-->
            <div class="smallList">
                <h2>@Model.careers.title</h2>
                @foreach (var career in Model.careers.careerNames)
                {
                    <h4>@career</h4>
                }
            </div>
        </div>

        <!--tabs for coop table and employment table-->
        <div id="tableTabs">
            <ul>
                <li><a href="#coop">@Model.coopTable.title</a></li>
                <li><a href="#employ">@Model.employmentTable.title</a></li>
            </ul>
            <!--div containing coop table-->
            <div id="coop">
                <table id="coopTable" class="stripe" style="width:100%">
                    <thead>
                        <tr>
                            <th>Employer</th>
                            <th>Degree</th>
                            <th>City</th>
                            <th>Term</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--inserts table entries for each coop-->
                        @foreach (var coop in Model.coopTable.coopInformation)
                        {
                            <tr>
                                <td>@coop.employer</td>
                                <td>@coop.degree</td>
                                <td>@coop.city</td>
                                <td>@coop.term</td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>
            <!--div containing employment table-->
            <div id="employ">
                <table id="employTable" class="stripe" style="width:100%">
                    <thead>
                        <tr>
                            <th>Employer</th>
                            <th>Degree</th>
                            <th>City</th>
                            <th>Title</th>
                            <th>Start Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--inserts table entries for each job-->
                        @foreach (var employ in Model.employmentTable.professionalEmploymentInformation)
                        {
                            <tr>
                                <td>@employ.employer</td>
                                <td>@employ.degree</td>
                                <td>@employ.city</td>
                                <td>@employ.title</td>
                                <td>@employ.startDate</td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>




</div>
